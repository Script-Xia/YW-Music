<!--pages/home-music/index.wxml-->
<!-- 搜索框 -->
<van-search 
  disabled 
  shape="round" 
  placeholder="请输入搜索关键词" 
  background="#fafafa" 
  bind:click-input="handleSearchClick" 
/>

<!-- 轮播图 -->
<swiper 
  class="swiper"
  indicator-dots
  autoplay
  circular
  interval="2500"
  duration="1000"
  style="height: {{ swiperHeight }}px"
>
  <block wx:for="{{ banners }}" wx:key="bannerId">
    <swiper-item class="swiper-item">
      <image 
        src="{{ item.pic }}" 
        class="swiper-image"
        mode="widthFix"
        bindload="handleSwiperImageLoaded"
      >
      </image>
    </swiper-item>
  </block>
</swiper>

<!-- 推荐歌曲 -->
<view 
  class="recommend-song"
  wx:if="{{ recommendSongs.length > 0 }}"
>
  <area-header title="推荐歌曲"></area-header>
  <block wx:for="{{ recommendSongs }}" wx:key="id">
    <song-item-v1 item="{{ item }}"></song-item-v1>
  </block>
</view>

<!-- 热门歌单 -->
<song-menu-area 
  songMenu="{{ hotSongMenu }}"
  wx:if="{{ hotSongMenu.length > 0 }}"
>
</song-menu-area>

<!-- 推荐歌单 -->
<song-menu-area 
  title="推荐歌单" 
  songMenu="{{ recommendSongMenu }}"
  wx:if="{{ recommendSongMenu.length > 0 }}"
>
</song-menu-area>

<!-- 巅峰榜 -->
<view class="summit-list" wx:if="{{ showSummitList }}">
  <area-header
    title="巅峰榜"
    showRight="{{ false }}"
  >
  </area-header>
  <block wx:for="{{ summitListData }}" wx:key="name">
    <summit-list-item item="{{ item }}"></summit-list-item>
  </block>
</view>

